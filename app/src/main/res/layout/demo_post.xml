<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/profileimg_pro_demo"
            android:layout_width="@dimen/_40mdp"
            android:layout_height="@dimen/_40mdp"
            android:layout_marginTop="8dp"
            android:padding="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view2_demo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/circle"
            app:layout_constraintBottom_toBottomOf="@id/profileimg_pro_demo"
            app:layout_constraintEnd_toEndOf="@+id/profileimg_pro_demo"
            app:layout_constraintStart_toStartOf="@+id/profileimg_pro_demo"
            app:layout_constraintTop_toTopOf="@+id/profileimg_pro_demo" />

        <View
            android:id="@+id/userName_demo"
            android:layout_width="110dp"
            android:layout_height="22dp"
            android:layout_marginStart="8dp"
            android:background="#eee"
            app:layout_constraintBottom_toBottomOf="@+id/profileimg_pro_demo"
            app:layout_constraintStart_toEndOf="@+id/profileimg_pro_demo"
            app:layout_constraintTop_toTopOf="@+id/profileimg_pro_demo"
            app:layout_constraintVertical_bias="0.13999999" />

        <View
            android:id="@+id/about_demo"
            android:layout_width="80dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:background="#eee"
            app:layout_constraintStart_toStartOf="@+id/userName_demo"
            app:layout_constraintTop_toBottomOf="@+id/userName_demo" />


        <View
            android:id="@+id/postImg_demo"
            android:layout_width="0dp"
            android:layout_height="@dimen/_150mdp"
            android:layout_marginTop="16dp"
            android:background="@drawable/follow_actice_btn"
            android:backgroundTint="#eee"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileimg_pro_demo" />


        <View
            android:id="@+id/like_demo"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#eee"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/postImg_demo" />

        <View
            android:id="@+id/comment_demo"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#eee"
            app:layout_constraintStart_toEndOf="@id/like_demo"
            app:layout_constraintTop_toBottomOf="@id/postImg_demo" />

        <View
            android:id="@+id/share_demo"
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="#eee"
            app:layout_constraintStart_toEndOf="@id/comment_demo"
            app:layout_constraintTop_toBottomOf="@+id/postImg_demo" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>